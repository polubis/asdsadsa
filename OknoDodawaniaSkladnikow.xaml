<Window x:Class="Cukiernia.OknoDodawaniaSkladnikow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OknoDodawaniaSkladnikow" Height="300" Width="300">
    <Grid>
        <WrapPanel>
            <Label Margin="20" >Nazwa</Label>
            <TextBox Width="141" Height="25"></TextBox>
            <Label Margin="20" Width="46" RenderTransformOrigin="0.5,0.5" >
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.027"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform> Ilość
            </Label>
            <TextBox Width="141" Height="25"></TextBox>
            <Label Margin="20" >Przepis</Label>
            <TextBox Width="141" Height="25"></TextBox>
            <Button Margin="30" Width="41" Height="25"> Dodaj</Button>
            <Button Margin="30" Width="41" Height="25">Cofnij</Button>

        </WrapPanel>
    </Grid>
</Window>
